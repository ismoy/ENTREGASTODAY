<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".DetalleServicios.HistoryBookingDetalle"
    android:background="@color/colordominante">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="180dp"
        android:background="@drawable/bgprincipal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_location_on_24"
            android:layout_marginTop="60dp"/>

        <TextView
            android:id="@+id/textvieworigenhistorybookingdetaillclient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Fake Street 234 San Francisco"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:maxLines="2"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_map_24"
            android:layout_marginTop="15dp"
            app:tint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textviewdestinationhistorybookingdetaillclient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Fake Street 234 San Francisco"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:maxLines="2"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_map_24"
            android:layout_marginTop="15dp"
            app:tint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textviewdistaciahistorybookingdetaillclient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="0"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_timer_24"
            android:layout_marginTop="15dp"
            app:tint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textvietiempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="0"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_attach_money_24"
            android:layout_marginTop="15dp"
            app:tint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textviewcosto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="0"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_imagehistorybookingdetaill"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_baseline_person_24"
        android:layout_gravity="center|top"
        app:civ_border_width="5dp"
        app:civ_border_color="@android:color/black"
        android:layout_marginTop="20dp">
    </de.hdodenhof.circleimageview.CircleImageView>

    <ImageView
        android:id="@+id/circle_imagebackhistorybookingdetaill"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
        android:layout_gravity="left|top"
        android:layout_marginTop="4dp"
        android:layout_marginStart="10dp"
        app:tint="@color/black" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>