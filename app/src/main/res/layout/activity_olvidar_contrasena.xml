<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colordominante"
        android:fillViewport="true">

        <ImageView
            android:id="@+id/volverolvidar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="90dp"
            android:elevation="20dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/logo" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:background="@drawable/bg"
            tools:context=".Controladores.MainActivity">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="37dp"
                android:layout_marginTop="58dp"
                android:layout_marginEnd="0dp"
                android:fontFamily="@font/mulish_regular"
                android:text="E-mail"
                app:layout_constraintBottom_toTopOf="@+id/emailfogot"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/emailfogot"
                android:layout_width="340dp"
                android:layout_height="74dp"
                android:layout_marginStart="37dp"
                android:layout_marginTop="150dp"
                android:layout_marginEnd="37dp"
                android:background="@drawable/edt_diseno"
                android:drawableTint="@color/black"
                android:enabled="true"
                android:fontFamily="@font/mulish_regular"
                android:hint="juan@gmail.com"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginTop="80dp" />


            <Button
                android:id="@+id/recuperar"
                android:layout_width="225dp"
                android:layout_height="60dp"
                android:layout_marginStart="61dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/bg_boton"
                android:fontFamily="@font/mulish_regular"
                android:text="Recuperar contraseÃ±a "
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/emailfogot"
                app:layout_constraintStart_toStartOf="@+id/emailfogot"
                app:layout_constraintTop_toBottomOf="@id/emailfogot"
                app:layout_constraintVertical_bias="0.113" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
</ScrollView>