<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Controladores.Home.ServicioEnvio"
    android:background="@color/colordominante">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/serviciomoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="3dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="15dp"
                android:src="@mipmap/motog" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:text="Motocicleta"
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="28sp" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/servicioauto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="3dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/serviciomoto">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="15dp"
                android:src="@mipmap/automovil" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:text="AutomÃ³vil"
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="28sp" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/serviciobicicleta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="30dp"
            app:cardElevation="3dp"
            android:layout_below="@id/servicioauto">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="15dp"
                android:src="@mipmap/bicicleta" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:text="Bicicleta"
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="28sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/serviciofurgo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="3dp"
            android:layout_marginTop="30dp"
             android:layout_below="@id/serviciobicicleta">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="15dp"
                android:src="@mipmap/furgon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:text="Furgon"
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="28sp" />

        </androidx.cardview.widget.CardView>
    </RelativeLayout>



    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bttomApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/white"
        app:navigationIcon="@drawable/ic_baseline_home_24"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_person_pin_24"
        app:tint="@color/black"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="680dp"
        android:layout_marginStart="280dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="350dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="680dp"
        android:src="@drawable/ic_baseline_settings_24"
        app:tint="@color/black" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_add_24"
        app:backgroundTint="@color/colorazul"
        app:layout_anchor="@id/bttomApp"
        app:maxImageSize="30dp"
        android:contentDescription="TODO" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>