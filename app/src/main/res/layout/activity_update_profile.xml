<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colordominante"
    tools:context=".Controladores.Cliente.UpdateProfile">

    <ImageView
        android:id="@+id/volverupdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
        app:tint="@color/black" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageviewprofile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_baseline_person_24"
        android:layout_gravity="center|top"
        app:civ_border_width="5dp"
        app:civ_border_color="@color/black"
        android:layout_marginTop="20dp">
    </de.hdodenhof.circleimageview.CircleImageView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:background="@drawable/bg"
        tools:context=".Controladores.MainActivity">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:fontFamily="@font/mulish_regular"
            android:text="Nombres"
            app:layout_constraintBottom_toTopOf="@+id/nombre"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/nombre"
            android:layout_width="340dp"
            android:layout_height="74dp"
            android:layout_marginStart="37dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="37dp"
            android:background="@drawable/edt_diseno"
            android:drawableTint="@color/black"
            android:enabled="true"
            android:fontFamily="@font/mulish_regular"
            android:hint="juan"
            android:inputType="text"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginTop="80dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:fontFamily="@font/mulish_regular"
            android:text="Apellido"
            app:layout_constraintBottom_toTopOf="@+id/apellido"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/apellido"
            android:layout_width="340dp"
            android:layout_height="74dp"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="37dp"
            android:background="@drawable/edt_diseno"
            android:drawableTint="@color/black"
            android:enabled="true"
            android:fontFamily="@font/mulish_regular"
            android:hint="juan Paredez"
            android:inputType="text"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nombre"
            android:layout_marginTop="20dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/mulish_regular"
            android:text="Telefono"
            app:layout_constraintBottom_toTopOf="@+id/phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="340dp"
            android:layout_height="74dp"
            android:layout_marginStart="37dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="37dp"
            android:background="@drawable/edt_diseno"
            android:drawableTint="@color/black"
            android:enabled="true"
            android:fontFamily="@font/mulish_regular"
            android:hint="+5697303073"
            android:inputType="phone"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/apellido"
            app:layout_goneMarginTop="80dp" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:fontFamily="@font/mulish_regular"
            android:text="E-mail"
            app:layout_constraintBottom_toTopOf="@+id/email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/email"
            android:layout_width="340dp"
            android:layout_height="74dp"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="37dp"
            android:background="@drawable/edt_diseno"
            android:drawableTint="@color/black"
            android:enabled="true"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/mulish_regular"
            android:hint="juan@gmail.com"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/phone" />

        <Button
            android:id="@+id/actualizar"
            android:layout_width="225dp"
            android:layout_height="60dp"
            android:layout_marginStart="61dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/bg_boton"
            android:fontFamily="@font/mulish_regular"
            android:text="Actualizar perfil "
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/email"
            app:layout_constraintStart_toStartOf="@+id/email"
            app:layout_constraintTop_toBottomOf="@id/email"
            app:layout_constraintVertical_bias="0.113" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>