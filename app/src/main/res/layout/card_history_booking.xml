<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="230dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="0dp"
    app:cardElevation="13dp"
    android:elevation="13dp"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="230dp"
        android:orientation="horizontal"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageviewuserhistory"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_person_24"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="15sp"
                android:fontFamily="@font/mulish_regular"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"/>
            <TextView
                android:id="@+id/textviewnamehistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ismoy Belizaire"
                android:textSize="16sp"
                android:fontFamily="@font/mulish_regular"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:maxLines="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Origen"
                android:fontFamily="@font/mulish_regular"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"/>
            <TextView
                android:id="@+id/textvieworigenhistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fake Street 234 San Francisco"
                android:textSize="16sp"
                android:fontFamily="@font/mulish_regular"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:maxLines="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/mulish_regular"
                android:layout_marginEnd="15dp"/>
            <TextView
                android:id="@+id/textviewdestinationhistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fake Street 435 Quens NY City"
                android:textSize="16sp"
                android:fontFamily="@font/mulish_regular"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:maxLines="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Costo"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/mulish_regular"
                android:layout_marginEnd="15dp"/>
            <TextView
                android:id="@+id/textviewcostohistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:fontFamily="@font/mulish_regular"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:maxLines="1"/>


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>